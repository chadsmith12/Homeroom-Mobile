<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HomeRoom_Mobile.Views.CourseDetailsPage"
             Title="Entry Details">
  
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"></RowDefinition>
      <RowDefinition Height="Auto"></RowDefinition>
      <RowDefinition Height="Auto"></RowDefinition>
    </Grid.RowDefinitions>

    <Label x:Name="Row1Label" 
            Grid.Row="0"
           Text="{Binding Course.Name}"/>
    <Label x:Name="Row2Label" 
            Grid.Row="1"
           Text="{Binding Course.Subject}"/>
    <Label
          x:Name="Row3Label"
          Grid.Row="2"
           Text="{Binding Course.Teacher}"/>
  </Grid>
  
  
  
</ContentPage>